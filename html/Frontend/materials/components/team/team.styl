@import 'nib'
@import '../../../assets/styl/utils.styl'

[data-component='team']

    .team 
        background-color #0ebfdd
        padding-top 20px
        width 100%
        height 100%
        text-align center
        color white

    .team
        h2
            padding-bottom 40px            
            +breakpoint( mobile )
                padding-bottom 30px


    .img-circle
        border-radius 50%
        width auto
        height auto
        
        +breakpoint( mobile )
            width 80px
            height 80px
            


    .link_button
        border-radius 28px 28px 28px 28px
        border solid 1px white
        color #FFF
        padding 10px 30px
        text-decoration none
        
        +breakpoint( mobile )
            padding 5px 15px
        

    .botao
        padding 80px 0
        
        +breakpoint( mobile )
            padding 65px 0
        

        
